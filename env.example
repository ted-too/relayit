# RelayIt Configuration
# Copy this file to .env and update the values for your deployment

# =======================
# GitHub Package Registry
# =======================
GITHUB_REPOSITORY_OWNER=your-github-username
IMAGE_TAG=latest

# =======================
# Service URLs
# =======================
# Adjust these URLs based on your deployment setup
API_URL=http://localhost:3005
WEB_URL=http://localhost:3000

# =======================
# Database Configuration
# =======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=relayit

# Full database URL (auto-constructed from above, or set manually)
# DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?sslmode=disable

# =======================
# Redis Configuration
# =======================
REDIS_URL=redis://redis:6379

# =======================
# Authentication
# =======================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-very-secure-secret-key-32-chars-min

# Should match your API_URL
BETTER_AUTH_URL=http://localhost:3005

# Should match your WEB_URL  
FRONTEND_URL=http://localhost:3000

# =======================
# Encryption
# =======================
# Generate with: openssl rand -hex 32
# Used to encrypt provider credentials in the database
ENCRYPTION_KEY_VERSION=v1
CREDENTIAL_ENCRYPTION_KEY_V1=your-64-character-hex-encryption-key-here

# =======================
# Production Overrides
# =======================
# For production deployments, update these values:

# Production URLs (uncomment and update for production)
# API_URL=https://api.your-domain.com
# WEB_URL=https://app.your-domain.com
# BETTER_AUTH_URL=https://api.your-domain.com
# FRONTEND_URL=https://app.your-domain.com

# Use specific image versions in production
# IMAGE_TAG=v1.0.0

# External database (uncomment for managed DB)
# DATABASE_URL=postgres://user:pass@your-db-host:5432/relayit?sslmode=require

# External Redis (uncomment for managed Redis)
# REDIS_URL=redis://your-redis-host:6379 