{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV",
        "VITE_API_URL",
        "VITE_DOCS_URL", 
        "VITE_BASE_URL",
        "VITE_EDITION",
        "BETTER_AUTH_URL",
        "APP_URL"
      ]
    },
    "@repo/api#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV",
        "BETTER_AUTH_URL",
        "APP_URL"
      ],
      "outputs": ["build/**"]
    },
    "@repo/web#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV",
        "VITE_API_URL",
        "VITE_DOCS_URL",
        "VITE_BASE_URL", 
        "VITE_EDITION"
      ],
      "outputs": [".output/**"]
    },
    "@repo/worker#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "NODE_ENV"
      ],
      "outputs": ["build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
